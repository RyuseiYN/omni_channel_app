<!-- app/views/cash/index.html.erb -->
<% content_for :header_title do %>
  <%= @header_title %>
<% end %>
<!-- 会計画面 -->
<div class="container py-5">
    <!-- 空白スペース -->
    <div class="my-3"></div>
    <!-- QRコード-->
    <div
        class="card rounded-4 shadow p-3 mb-4 bg-white d-flex justify-content-center align-items-center"
        style="border-color: rgba(0,0,0,0.1); height: 200px;">
        <div class="d-flex align-items-center gap-2 mb-3">
            <h5 class="card-title mb-0 fw-bold">〇〇カード</h5>
        </div>
        <div class="d-flex justify-content-center align-items-center"
            style="flex-grow: 1; width: 100%;">
            <img
                src="https://api.qrserver.com/v1/create-qr-code/?size=150x150&data=example"
                alt="QRコード"
                style="width: 100px; height: 100px; object-fit: contain;">
        </div>
    </div>

    <!-- 残高 -->
    <div class="card rounded-4 shadow p-3 mb-4 bg-white"
        style="border-color: rgba(0,0,0,0.1);">
        <div class="d-flex justify-content-center align-items-center"
            style="gap: 1rem; position: relative;">
            <h5 class="card-title mb-0 fw-bold">チャージ残高:</h5>
            <h5 class="card-title mb-0 fw-bold">2000円</h5>
            <span class="material-icons"
                style="position: absolute; right: 1rem; cursor: pointer;">chevron_right</span>
        </div>
    </div>

    <!-- ポイント -->
    <div class="card rounded-4 shadow p-3 mb-4 bg-white"
        style="border-color: rgba(0,0,0,0.1);">
        <div class="d-flex justify-content-center align-items-center"
            style="gap: 1rem; position: relative;">
            <h5 class="card-title mb-0 fw-bold">ポイント:</h5>
            <h5 class="card-title mb-0 fw-bold">100pt</h5>
            <span class="material-icons"
                style="position: absolute; right: 1rem; cursor: pointer;">chevron_right</span>
        </div>
    </div>
</div>

<!-- カメラスキャン -->

<nav
    class="navbar fixed-bottom bg-white border-top px-5 d-flex justify-content-between align-items-center"
    style="height: 56px;">
    <button
        class="btn text-center text-white d-flex flex-row align-items-center justify-content-center p-0"
        style="background-color: red; height: 100%; width: 100%; padding-left: 10px;">
        <span class="material-icons"
            style="font-size: 24px; line-height: 24px; margin-right: 8px;">camera_alt</span>
        <div style="font-size: 12px;">スキャン払い</div>
    </button>
</nav>
