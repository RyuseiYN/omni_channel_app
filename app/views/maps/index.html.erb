<!-- app/views/maps/index.html.erb -->

<div data-controller="maps" class="map-page">
  <!-- 固定トップバー -->
  <nav class="navbar navbar-light bg-light fixed-top shadow-sm" style="height:56px;">
    <div class="container d-flex align-items-center" style="height:100%;">
      <div style="width:40px; display:flex; justify-content:start; align-items:center; cursor:pointer;"
           data-action="click->tomioka-map#goBack">
        <span class="material-icons" style="font-size:30px;">chevron_left</span>
      </div>
      <h5 class="mb-0 fw-bold text-center flex-grow-1" style="margin:0;">富岡MAP</h5>
      <div style="width:40px;"></div>
    </div>
  </nav>

  <!-- 地図表示エリア -->
  <div data-tomioka-map-target="map" id="map"></div>

  <!-- 検索ボックス -->
  <div id="searchBox">
    <span class="material-icons search-icon">search</span>
    <input type="text"
           data-tomioka-map-target="searchInput"
           placeholder="観光スポットを検索" />
  </div>

  <!-- 現在地ボタン -->
  <div class="locate-btn"
       data-tomioka-map-target="locateBtn"
       data-action="click->tomioka-map#getCurrentLocation"
       title="現在地へ移動">
    <span class="material-icons" style="color: gray;">my_location</span>
  </div>

  <!-- リスト表示ボタン -->
  <div class="list-btn"
       data-tomioka-map-target="listBtn"
       data-action="click->tomioka-map#showSpotList"
       title="リストを表示">
    <span class="material-icons" style="color: gray;">list</span>
  </div>

  <!-- 横スワイプカード -->
  <div class="swiper-container">
    <div class="swiper-wrapper" data-tomioka-map-target="spotCards"></div>
  </div>
</div>
<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
<script src="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.js"></script>
